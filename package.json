{
  "name": "electron-desktop-app",
  "version": "1.0.0",
  "description": "A modern Node.js desktop GUI application built with Electron and Go",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build:go": "go build -o server server.go",
    "build:go:win": "go build -o server.exe server.go",
    "build:all": "npm install && npm run build:go",
    "pack": "electron-builder --dir",
    "dist": "npm run build:go:win && electron-builder",
    "dist:win": "npm run build:go:win && electron-builder --win",
    "dist:mac": "go build -o server server.go && electron-builder --mac",
    "dist:linux": "go build -o server server.go && electron-builder --linux"
  },
  "keywords": [
    "electron",
    "desktop",
    "nodejs",
    "go",
    "golang",
    "gui"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.electron.go.app",
    "productName": "My Desktop App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "styles.css",
      "server.exe",
      "server",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png",
      "category": "Utility"
    }
  }
}

